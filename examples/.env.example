# SSH Test Server Environment Variables
# Copy this file to .env and modify as needed

# Basic Configuration
# ==================

# SSH user to create
SSH_USER=testuser

# SSH user password (optional, but recommended for testing)
SSH_PASSWORD=testpass123

# SSH server port
SSH_PORT=22

# Debug level (0=none, 1=verbose, 2=debug, 3=debug3)
SSH_DEBUG_LEVEL=1

# Authentication Configuration
# ===========================

# Enable/disable password authentication
SSH_PERMIT_PASSWORD_AUTH=yes

# Enable/disable public key authentication  
SSH_PERMIT_PUBKEY_AUTH=yes

# Enable/disable challenge-response authentication (keyboard-interactive)
SSH_CHALLENGE_RESPONSE_AUTH=no

# Use PAM for authentication (required for keyboard-interactive)
SSH_USE_PAM=no

# Permit empty passwords
SSH_PERMIT_EMPTY_PASSWORDS=no

# Authentication methods (any, password, publickey, keyboard-interactive, or comma-separated list)
SSH_AUTH_METHODS=any

# SSH authorized keys (multiline support, use literal \n for newlines in compose)
# SSH_AUTHORIZED_KEYS=ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAACAQDJ... user@example.com\nssh-ed25519 AAAAC3NzaC1lZDI1NTE5... user2@example.com

# Security Configuration
# ======================

# Permit root login (yes/no/without-password)
SSH_PERMIT_ROOT_LOGIN=no

# Maximum authentication attempts
SSH_MAX_AUTH_TRIES=6

# Login grace time in seconds
SSH_LOGIN_GRACE_TIME=120

# Use DNS lookups
SSH_USE_DNS=no

# Forwarding Configuration
# =======================

# Enable X11 forwarding
SSH_X11_FORWARDING=no

# Enable SSH agent forwarding
SSH_AGENT_FORWARDING=no

# Enable TCP forwarding
SSH_TCP_FORWARDING=no

# Advanced Configuration
# =====================

# Custom SSH configuration (multiline support)
# Use this to add any additional sshd_config directives
# SSH_CUSTOM_CONFIG=AcceptEnv LANG LC_*\nPrintMotd yes\nBanner /etc/ssh/banner

# Host keys (advanced usage)
# Provide custom host keys in format: KEY_TYPE:BASE64_ENCODED_PRIVATE_KEY
# SSH_HOST_KEYS=rsa:LS0tLS1CRUdJTiBPUEVOU1NIIFBSSVZBVEUgS0VZLS0tLS0...\ned25519:LS0tLS1CRUdJTiBPUEVOU1NIIFBSSVZBVEUgS0VZLS0tLS0...

# Examples for Different Use Cases
# ================================

# Password-only authentication:
# SSH_PERMIT_PASSWORD_AUTH=yes
# SSH_PERMIT_PUBKEY_AUTH=no
# SSH_PASSWORD=your_password

# Public key-only authentication:
# SSH_PERMIT_PASSWORD_AUTH=no
# SSH_PERMIT_PUBKEY_AUTH=yes
# SSH_AUTHORIZED_KEYS=ssh-rsa AAAAB3... user@example.com

# Keyboard-interactive authentication:
# SSH_PERMIT_PASSWORD_AUTH=no
# SSH_PERMIT_PUBKEY_AUTH=no
# SSH_CHALLENGE_RESPONSE_AUTH=yes
# SSH_USE_PAM=yes
# SSH_AUTH_METHODS=keyboard-interactive

# High security configuration:
# SSH_PERMIT_ROOT_LOGIN=no
# SSH_PERMIT_EMPTY_PASSWORDS=no
# SSH_MAX_AUTH_TRIES=3
# SSH_LOGIN_GRACE_TIME=60
# SSH_USE_DNS=no
# SSH_X11_FORWARDING=no
# SSH_AGENT_FORWARDING=no
# SSH_TCP_FORWARDING=no

# Debug mode:
# SSH_DEBUG_LEVEL=3

# Custom port:
# SSH_PORT=2224